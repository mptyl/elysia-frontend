############
# ELYSIA FRONTEND - ATHENA PROJECT
############
# Copy this file to .env.local and customize for your environment.
#
# Three deployment scenarios:
# 1. LOCAL DEV: localhost + LDAP emulator
# 2. REMOTE SERVER: 10.1.1.11 (or VPN IP) + Real Entra ID
# 3. PRODUCTION: Docker Swarm URL + Real Entra ID

############
# Application Origin (CRITICAL - DO NOT AUTO-DETECT)
############
# This is the public URL users use to access the application.
# Used to build OAuth redirect URIs. MUST match SITE_URL in supabase-project/.env
#
# Examples:
#   Local:      http://localhost:3090
#   Remote:     http://10.1.1.11:3090
#   Production: https://athena.yourcompany.com
#
NEXT_PUBLIC_APP_ORIGIN=<YOUR_PUBLIC_URL>

############
# Server Binding
############
APP_BIND_HOST=0.0.0.0
APP_BIND_PORT=3090

############
# Authentication Provider
############
# MANDATORY: Choose authentication provider
# Options: "emulator" (local LDAP emulator) | "entra" (Microsoft Entra ID)
#
NEXT_PUBLIC_AUTH_PROVIDER=<emulator_or_entra>
AUTH_PROVIDER_MODE=<emulator_or_entra>
NEXT_PUBLIC_OAUTH_REDIRECT_PATH=/auth/callback

############
# Supabase Configuration
############
# Browser uses proxy path, server uses internal URL
NEXT_PUBLIC_SUPABASE_URL=/supabase
SUPABASE_INTERNAL_URL=http://127.0.0.1:8000

# Copy this key from supabase-project/.env ANON_KEY
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=<YOUR_SUPABASE_ANON_KEY>

############
# Entra Emulator (ONLY for NEXT_PUBLIC_AUTH_PROVIDER=emulator)
############
# Internal Docker hostname for LDAP emulator
ENTRA_EMULATOR_INTERNAL_HOST=http://host.docker.internal:8029

# Public browser path to access emulator via Next.js proxy
NEXT_PUBLIC_ENTRA_EMULATOR_PUBLIC_BASE=/entra

# Internal URL (for next.config.js rewrites)
ENTRA_INTERNAL_URL=http://127.0.0.1:8029

############
# Elysia Backend
############
ELYSIA_INTERNAL_URL=http://127.0.0.1:8090

# WebSocket port for browser connection (default: 8090)
NEXT_PUBLIC_ELYSIA_WS_PORT=8090
