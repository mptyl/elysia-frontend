# Local Mac profile example.
# Copy to /opt/athena/elysia-frontend/.env.local and adjust if your local ports differ.
APP_BIND_HOST=0.0.0.0
APP_BIND_PORT=3090
APP_PUBLIC_ORIGIN=http://localhost:3090

NEXT_PUBLIC_AUTH_PROVIDER=emulator
AUTH_PROVIDER_MODE=emulator
NEXT_PUBLIC_OAUTH_REDIRECT_PATH=/auth/callback

NEXT_PUBLIC_SUPABASE_URL=/supabase
SUPABASE_INTERNAL_URL=http://127.0.0.1:8000
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=<set-the-anon-key-of-your-local-supabase>
NEXT_PUBLIC_SUPABASE_AUTH_COOKIE_NAME=sb-athena-auth-token

ENTRA_EMULATOR_INTERNAL_HOST=http://host.docker.internal:8029
NEXT_PUBLIC_ENTRA_EMULATOR_PUBLIC_BASE=/entra
ENTRA_INTERNAL_URL=http://127.0.0.1:8029
ELYSIA_INTERNAL_URL=http://127.0.0.1:8090
# WebSocket port per connessione browser → Elysia backend (default: 8090)
# NEXT_PUBLIC_ELYSIA_WS_PORT=8090

# GoTrue redirect URI — must match supabase-project/.env
GOTRUE_EXTERNAL_AZURE_REDIRECT_URI=http://localhost:8000/auth/v1/callback

# ---- ThothAI integration ----
NEXT_PUBLIC_THOTH_URL=http://localhost:3040
